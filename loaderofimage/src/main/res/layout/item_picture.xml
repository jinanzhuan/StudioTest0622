<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="@dimen/picture_item_size"
        android:layout_height="@dimen/picture_item_size"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/generic_position_size"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_item_check"
        android:layout_width="@dimen/generic_icon_size"
        android:layout_height="@dimen/generic_icon_size"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/generic_position_size"
        android:src="@drawable/blue_unselected" />

</RelativeLayout>